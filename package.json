{
  "name": "boltpay",
  "version": "0.1.0",
  "description": "Library to interact with Bolt checkout APIs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "Bolt",
    "credit cards",
    "checkout",
    "payment",
    "api"
  ],
  "scripts": {
    "build:declarations": "npx tsc",
    "build:library": "npm run build:declarations && npm run build:prod",
    "build:prod": "webpack --env.NODE_ENV=prod",
    "dev": "webpack --env.NODE_ENV=dev --watch",
    "precommit": "lint-staged",
    "test:dev": "jest --watchAll --notify",
    "pp": "lt --help",
    "test:prod": "jest --config=jest-prod-config.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "tslint",
        "prettier --write",
        "git add"
      ],
      "*.json": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "dist/**.*"
    ]
  },
  "jest": {
    "roots": [
      "tests/"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".test.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "globals": {
      "IS_DEV": true
    },
    "verbose": true,
    "moduleDirectories": [
      "node_modules",
      "src",
      "tests"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoltApp/bolt-node.git"
  },
  "author": "Bolt <support@bolt.com> (https://bolt.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BoltApp/bolt-node/issues"
  },
  "homepage": "https://github.com/BoltApp/bolt-node",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.9.4",
    "@types/puppeteer": "^1.6.4",
    "@types/request": "^2.47.1",
    "@types/request-promise-native": "^1.0.15",
    "@types/webpack": "^4.4.11",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.2",
    "localtunnel": "^1.9.1",
    "prettier": "^1.14.2",
    "puppeteer": "^1.8.0",
    "regenerator-runtime": "^0.12.1",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "shelljs": "^0.8.2"
  }
}
